<%- include('../partials/header') %>

<h2>Flight List</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Airline</th>
      <th scope="col">Flight Number</th>
      <th scope="col">Departs</th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(function(f) { %>
        <% const today = new Date(); %>
      <tr class="<%= f.departs < today ? 'table-danger' : '' %>">
        <td><%= f.airline %></td>
        <td><%= f.flightNo %></td>
        <td><%= f.departs.toDateString() %></td>
        <td><a href="/flights/<%= f._id %>" class="btn btn-outline-info" role="button">DETAILS</a></td>
      </tr>
    <% }); %>
  </tbody>
</table>

<%- include('../partials/header') %>